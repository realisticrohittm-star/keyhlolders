                    { title: 'Educational Institutions Development', status: 'progress' }
                ]
            }
        };

        function openPoliticianModal(politicianId) {
            const data = politicianData[politicianId];
            if (!data) return;

            // Update modal content
            document.getElementById('modalAvatar').textContent = data.avatar;
            document.getElementById('modalName').textContent = data.name;
            document.getElementById('modalRole').textContent = data.role;
            document.getElementById('modalParty').textContent = data.party;
            document.getElementById('modalAge').textContent = data.age;
            document.getElementById('modalScore').textContent = data.score;
            document.getElementById('modalCases').textContent = data.cases;
            document.getElementById('modalAssets').textContent = data.assets;
            document.getElementById('modalEducation').textContent = data.education;
            document.getElementById('modalPerformance').textContent = data.performance;

            // Update promises
            const promisesHTML = data.promises.map(promise => `
                <div class="promise-item">
                    <div class="promise-title">${promise.title}</div>
                    <span class="promise-status status-${promise.status}">${
                        promise.status === 'completed' ? 'Completed' :
                        promise.status === 'progress' ? 'In Progress' : 'Pending'
                    }</span>
                </div>
            `).join('');
            document.getElementById('modalPromises').innerHTML = promisesHTML;

            // Show modal
            document.getElementById('politicianModal').classList.add('active');
        }

        function closePoliticianModal() {
            document.getElementById('politicianModal').classList.remove('active');
        }
    </script>
</body>
</html>


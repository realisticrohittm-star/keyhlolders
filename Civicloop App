    <script>
        // Tab Navigation
        document.querySelectorAll('.nav-tab').forEach(tab => {
            tab.addEventListener('click', () => {
                document.querySelectorAll('.nav-tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
                
                tab.classList.add('active');
                document.getElementById(tab.dataset.tab).classList.add('active');
            });
        });

        // Policy Pulse Toggle
        document.querySelectorAll('.toggle-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                document.querySelectorAll('.toggle-btn').forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                
                if (btn.dataset.view === 'national') {
                    document.getElementById('national-view').style.display = 'block';
                    document.getElementById('local-view').style.display = 'none';
                } else {
                    document.getElementById('national-view').style.display = 'none';
                    document.getElementById('local-view').style.display = 'block';
                }
            });
        });

        // Lesson Card Click
        document.querySelectorAll('.lesson-card').forEach(card => {
            card.addEventListener('click', () => {
                card.style.transform = 'scale(0.98)';
                setTimeout(() => {
                    card.style.transform = 'scale(1)';
                    showToast('ðŸŽ“ Lesson launching...');
                }, 150);
            });
        });

        // Modal Functions
        function openAuditModal(project) {
            document.getElementById('auditModal').classList.add('active');
        }

        function closeModal() {
            document.getElementById('auditModal').classList.remove('active');
        }

        function simulateUpload() {
            const zone = document.querySelector('.upload-zone');
            zone.style.background = 'linear-gradient(135deg, rgba(38, 222, 129, 0.2), rgba(32, 191, 107, 0.2))';
            zone.style.borderColor = '#26DE81';
            zone.style.boxShadow = 'inset 0 0 30px rgba(38, 222, 129, 0.3), 0 0 25px rgba(38, 222, 129, 0.6)';
            zone.innerHTML = `
                <div class="upload-icon" style="color: #26DE81; text-shadow: 0 0 15px rgba(38, 222, 129, 0.8);">âœ…</div>
                <div style="font-weight: 900; color: #26DE81; margin-bottom: 4px; text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);">Photo uploaded!</div>
                <div style="font-size: 12px; color: #1B9D57; font-weight: 700;">Location verified: Andheri West</div>
            `;
        }

        function submitAudit() {
            closeModal();
            showToast('âœ… Audit submitted successfully! +25 XP');
            
            // Reset upload zone after delay
            setTimeout(() => {
                const zone = document.querySelector('.upload-zone');
                zone.style.background = 'linear-gradient(135deg, rgba(91, 141, 238, 0.1), rgba(43, 75, 140, 0.1))';
                zone.style.borderColor = '#5B8DEE';
                zone.style.boxShadow = 'inset 0 0 20px rgba(91, 141, 238, 0.2)';
                zone.innerHTML = `
                    <div class="upload-icon">ðŸ“·</div>
                    <div style="font-weight: 600; color: #5B8DEE; margin-bottom: 4px;">Tap to Upload Photo</div>
                    <div style="font-size: 12px; color: #6B7280;">Geotagging required</div>
                `;
            }, 1000);
        }

        function showToast(message) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.classList.add('show');
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }

        // FAB interaction
        document.querySelector('.fab').addEventListener('click', () => {
            showToast('âš¡ Quick Actions coming soon!');
        });

        // Smooth scroll for app container
        document.querySelector('.app-container').style.scrollBehavior = 'smooth';

        // Bottom Navigation
        document.querySelectorAll('.bottom-nav .nav-item').forEach(item => {
            item.addEventListener('click', () => {
                const navTarget = item.dataset.nav;
                
                // Remove active from all nav items
                document.querySelectorAll('.bottom-nav .nav-item').forEach(n => n.classList.remove('active'));
                item.classList.add('active');
                
                if (navTarget === 'home') {
                    // Show the first tab (Civics Gym)
                    document.querySelectorAll('.nav-tab').forEach(t => t.classList.remove('active'));
                    document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
                    
                    document.querySelector('.nav-tab[data-tab="gym"]').classList.add('active');
                    document.getElementById('gym').classList.add('active');
                } else if (navTarget === 'profile') {
                    // Show profile section
                    document.querySelectorAll('.nav-tab').forEach(t => t.classList.remove('active'));
                    document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
                    document.getElementById('profile').classList.add('active');
                } else if (navTarget === 'rankings') {
                    // Show rankings section
                    document.querySelectorAll('.nav-tab').forEach(t => t.classList.remove('active'));
                    document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
                    document.getElementById('rankings').classList.add('active');
                }
            });
        });

        // Rankings Toggle
        document.querySelectorAll('[data-rank-view]').forEach(btn => {
            btn.addEventListener('click', () => {
                document.querySelectorAll('[data-rank-view]').forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                
                if (btn.dataset.rankView === 'national') {
                    document.getElementById('national-rankings').style.display = 'block';
                    document.getElementById('state-rankings').style.display = 'none';
                } else {
                    document.getElementById('national-rankings').style.display = 'none';
                    document.getElementById('state-rankings').style.display = 'block';
                }
            });
        });

